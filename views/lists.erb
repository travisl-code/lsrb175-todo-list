<ul id="lists">
  <% sort_lists!(@lists).each do |list| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= list[:id] %>">
        <h2><%= list[:name] %> </h2>
        <p><%= evaluate_todos_complete(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href='/lists/new'>New List</a>
<% end %>